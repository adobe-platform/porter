FROM golang:1.7.5

ADD . /go/src/github.com/adobe-platform/sample_project
WORKDIR /go/src/github.com/adobe-platform/sample_project

# Recompile everything and create a static binary
ENV CGO_ENABLED=0
RUN go build -v -a --installsuffix cgo -ldflags '-s' -o main

# Produce the docker context
CMD ["tar", "-c", "main", "Dockerfile"]
